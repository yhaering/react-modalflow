{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "moduleResolution": "Node",
    "lib": ["es5", "es6", "dom"],
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "types",
    "jsx": "react"
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src/**/*.ts", "global.d.ts"]
}
